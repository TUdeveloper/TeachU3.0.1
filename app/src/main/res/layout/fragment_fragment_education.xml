<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="0dp"
tools:context="com.mai.aso.masaya.teachu.FragmentEducation"
    android:orientation="vertical">

    <EditText
    android:id="@+id/editText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="75dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Name" />

    <LinearLayout
        android:id="@+id/show_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom">

        <ImageButton
            android:id="@+id/education_chat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_chat_1"
            android:contentDescription="@string/action_search" />

        <ImageButton
            android:id="@+id/education_make_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_make_1"
            android:contextClickable="true"
            android:contentDescription="@string/action_search"/>

        <ImageButton
            android:id="@+id/education_calendar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_calendar_1"
            android:contentDescription="@string/action_search" />

        <ImageButton
            android:id="@+id/education_book_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_book_1"
            android:contentDescription="@string/action_settings" />

    </LinearLayout>

</RelativeLayout>